<?xml version="1.0" encoding="utf-8" ?>
<component name="UISplash" extends="Group">
<children>
<!-- KICK GREEN GRADIENT BACKGROUND -->
<Rectangle id="background" 
         width="1280" 
         height="720" 
         color="0x0F0F23FF" />

<!-- ACCENT GRADIENT OVERLAY -->
<Rectangle id="accentOverlay" 
         width="1280" 
         height="720" 
         color="0x53FC1808" />

<!-- KICK LOGO SECTION -->
<Group id="logoSection" translation="[0, 200]">
<!-- KICK TITLE - BOLD & MODERN -->
<Label id="kickTitle" 
     text="KICK" 
     width="1280" 
     height="100"
     translation="[0, 0]"
     horizAlign="center" 
     vertAlign="center"
     font="font:LargeSystemFont" 
     color="0x53FC18FF" />

<!-- SUBTITLE - KICK STYLE -->
<Label id="subtitle" 
       text="Grow. Stream. Connect." 
       width="1280" 
       height="60"
       translation="[0, 120]"
       horizAlign="center" 
       vertAlign="center"
       font="font:MediumSystemFont" 
       color="0xF0F0F0FF" />
</Group>

<!-- LOADING ANIMATION SECTION -->
<Group id="loadingSection" translation="[0, 400]">
<!-- LOADING DOTS - KICK GREEN THEME -->
<Group id="dotsGroup" translation="[580, 0]">
  <!-- DOT 1 -->
  <Label id="dot1" 
         text="●" 
         width="20" 
         height="40"
         translation="[0, 0]"
         horizAlign="center" 
         vertAlign="center"
         font="font:LargeSystemFont" 
         color="0x53FC18FF" />
  
  <!-- DOT 2 -->
  <Label id="dot2" 
         text="●" 
         width="20" 
         height="40"
         translation="[25, 0]"
         horizAlign="center" 
         vertAlign="center"
         font="font:LargeSystemFont" 
         color="0x53FC1888" />
  
  <!-- DOT 3 -->
  <Label id="dot3" 
         text="●" 
         width="20" 
         height="40"
         translation="[50, 0]"
         horizAlign="center" 
         vertAlign="center"
         font="font:LargeSystemFont" 
         color="0x53FC1844" />
  
  <!-- DOT 4 -->
  <Label id="dot4" 
         text="●" 
         width="20" 
         height="40"
         translation="[75, 0]"
         horizAlign="center" 
         vertAlign="center"
         font="font:LargeSystemFont" 
         color="0x53FC1822" />
  
  <!-- DOT 5 -->
  <Label id="dot5" 
         text="●" 
         width="20" 
         height="40"
         translation="[100, 0]"
         horizAlign="center" 
         vertAlign="center"
         font="font:LargeSystemFont" 
         color="0x53FC1811" />
</Group>

<!-- STATUS TEXT - MODERN STYLING -->
<Label id="statusText" 
       text="Loading streamers..." 
       width="1280" 
       height="40"
       translation="[0, 60]"
       horizAlign="center" 
       vertAlign="center"
       font="font:MediumSystemFont" 
       color="0xB0B0B0FF" />
</Group>

<!-- ANIMATION TIMER -->
<Timer id="animationTimer" 
     duration="0.3" 
     repeat="true" />
</children>

<interface>
<field id="splashComplete" type="boolean" />
<field id="streamData" type="assocarray" />
</interface>

<script type="text/brightscript" uri="pkg:/components/UISplash.brs" />
</component>