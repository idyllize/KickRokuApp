<?xml version="1.0" encoding="utf-8" ?>
<component name="StreamListItem" extends="Group">
<children>
  <!-- BEAUTIFUL CARD SHADOW -->
  <Rectangle id="cardShadow" 
             width="325" 
             height="285" 
             translation="[-5, -5]"
             color="0x000000AA" />
  
  <!-- BEAUTIFUL MAIN CARD BACKGROUND -->
  <Rectangle id="cardBackground" 
             width="320" 
             height="280" 
             color="0x1E1E35FF" />
  
  <!-- BEAUTIFUL FOCUS RING -->
  <Rectangle id="focusRing" 
             width="330" 
             height="290" 
             translation="[-5, -5]"
             color="0x00000000" />
  
  <!-- BEAUTIFUL THUMBNAIL AREA -->
  <Rectangle id="thumbnailArea" 
             width="300" 
             height="180" 
             translation="[10, 10]"
             color="0x2A2A45FF" />
  
  <!-- BEAUTIFUL THUMBNAIL OVERLAY -->
  <Rectangle id="thumbnailOverlay" 
             width="300" 
             height="180" 
             translation="[10, 10]"
             color="0x00000044" />
  
  <!-- BEAUTIFUL LIVE BADGE -->
  <Rectangle id="liveBadge" 
             width="80" 
             height="30" 
             translation="[20, 20]"
             color="0xFF0000FF" />
  
  <Label id="liveText" 
         text="LIVE" 
         width="80" 
         height="30"
         translation="[20, 20]"
         horizAlign="center" 
         vertAlign="center"
         font="font:SmallBoldSystemFont" 
         color="0xFFFFFFFF" />
  
  <!-- BEAUTIFUL QUALITY BADGE -->
  <Rectangle id="qualityBadge" 
             width="60" 
             height="30" 
             translation="[240, 20]"
             color="0x53FC18FF" />
  
  <Label id="qualityText" 
         text="HD" 
         width="60" 
         height="30"
         translation="[240, 20]"
         horizAlign="center" 
         vertAlign="center"
         font="font:SmallBoldSystemFont" 
         color="0x000000FF" />
  
  <!-- BEAUTIFUL STREAMER INFO SECTION -->
  <Rectangle id="infoSection" 
             width="300" 
             height="80" 
             translation="[10, 200]"
             color="0x0F0F25FF" />
  
  <!-- BEAUTIFUL STREAMER NAME -->
  <Label id="streamerName" 
         text="@STREAMER" 
         width="280" 
         height="50"
         translation="[20, 210]"
         horizAlign="center" 
         vertAlign="center"
         font="font:LargeBoldSystemFont" 
         color="0x53FC18FF" />
  
  <!-- BEAUTIFUL PLATFORM BADGE -->
  <Rectangle id="platformBadge" 
             width="80" 
             height="25" 
             translation="[220, 250]"
             color="0x53FC1844" />
  
  <Label id="platformText" 
         text="KICK" 
         width="80" 
         height="25"
         translation="[220, 250]"
         horizAlign="center" 
         vertAlign="center"
         font="font:SmallBoldSystemFont" 
         color="0x53FC18FF" />
</children>

<interface>
<field id="itemContent" type="node" onChange="onContentChanged" />
</interface>

<script type="text/brightscript" uri="pkg:/components/StreamListItem.brs" />
</component>
